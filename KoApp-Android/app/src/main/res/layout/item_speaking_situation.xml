<?xml version="1.0" encoding="utf-8"?>
<!-- 말하기 연습 -> 상황 화면에서 사용되는 리스트 아이템 -->
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_speaking_situation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Korean_H4"
            tools:text="@string/speaking_media_and_content_kpop_tip_1"
            android:textColor="@color/Black"
            android:paddingTop="24dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

        <TextView
            android:id="@+id/tv_item_speaking_situation_kor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            style="@style/Korean_Body1"
            tools:text="@string/speaking_media_and_content_kpop_tip_1"
            android:textColor="@color/Gray_600"
            android:layout_marginTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

        <View
            android:id="@+id/view_item_speaking_situation_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/Gray_100"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</layout>